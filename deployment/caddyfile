# Caddy Configuration for JemFinder
# Place this file at: /etc/caddy/Caddyfile

yourdomain.com {
    # Frontend - Serve static files
    root * /var/www/jemfinder/frontend/dist
    
    # SPA routing
    try_files {path} /index.html
    
    # API Proxy
    reverse_proxy /api/* localhost:8000 {
        header_up Host {host}
        header_up X-Real-IP {remote}
        header_up X-Forwarded-For {remote}
        header_up X-Forwarded-Proto {scheme}
        header_up X-Forwarded-Host {host}
        
        # Timeouts for long-running requests (Gemini AI)
        transport http {
            dial_timeout 120s
            response_header_timeout 120s
        }
    }
    
    # Static assets with caching
    @static {
        path *.js *.css *.png *.jpg *.jpeg *.gif *.ico *.svg *.woff *.woff2 *.ttf *.eot
    }
    header @static Cache-Control "public, max-age=31536000, immutable"
    
    # Frontend files - no cache
    @frontend {
        path *.html
    }
    header @frontend Cache-Control "no-cache, no-store, must-revalidate"
    
    # Security headers
    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains"
        X-Frame-Options "SAMEORIGIN"
        X-Content-Type-Options "nosniff"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "no-referrer-when-downgrade"
        Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline';"
    }
    
    # Compression
    encode gzip zstd
    
    # Logging
    log {
        output file /var/log/caddy/jemfinder.log
        format json
    }
    
    # Deny hidden files
    @hidden {
        path_regexp ^.*/\..*$
    }
    respond @hidden 403
}

